<h5>Logged in as: <%= @user.username %> </h5>

<h3><p>Your Review(s) for: <%= @airport.airport_code %> <p></h3>

  <% Helpers.flash_types.select {|type| flash.has?(type)}.each do |type| %>

    <div class="flash <%= type %>">

      <strong><%= flash[type] %></strong><br><br>

    </div>

  <% end %>

<div>
  <button onclick="location.href = '/airports';">Back to Airports</button>
</div>

<div>
  <button onclick="location.href = '/logout';">Logout</button>
</div>

<br><hr>

<% @airport.reviews.reverse.each do |review| %>

 <div id="b">

  <ul>

    <li><a href="/reviews/<%= review.id %>"><%= review.content %></a> <br> &nbsp &nbsp <em>posted on: <%= review.created_at.strftime("%A, %B %d, %Y") %> by <%= User.find(review.user_id).username %></em></li> <br><br>

  </ul>

 </div>

<% end %>
